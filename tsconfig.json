{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "isolatedModules": true,
    "types": ["node"],
    "lib": ["ESNext"],
    "outDir": "./dist",
    "baseUrl": "./src"
  },
  "include": ["./**/*.ts", "./global.d.ts"]
}
